<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuthFirebase.Views.InicioPage">
    <ContentPage.Content>
        <Grid>

            <Image Source="FontoGato.jpg" Aspect="AspectFill"/>


            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">

                <Label Text="¡Login Exitoso con Firebase!"
                   FontSize="24" FontAttributes="Bold"
                   TextColor="White" HorizontalTextAlignment="Center"
                   Margin="20"/>

                <Label x:Name="MyUsername" TextColor="White"
                   HorizontalTextAlignment="Center" Margin="0,10"/>

                <Button x:Name="btnLogout" Text="Cerrar Sesión" Clicked="btnLogout_Clicked"
                    BackgroundColor="#FF4081" TextColor="White" CornerRadius="8"
                    WidthRequest="150" HeightRequest="40" Margin="0,20"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>