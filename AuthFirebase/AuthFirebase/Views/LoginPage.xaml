<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuthFirebase.Views.LoginPage">
    <Frame Grid.Row="2" BackgroundColor="#f0f0f0" CornerRadius="10" Padding="10" Margin="0,10,0,0">
        <StackLayout Spacing="10">
            <Entry Placeholder="Correo electrónico" x:Name="email" Keyboard="Email" TextColor="Black"
           PlaceholderColor="#7f7f7f" BackgroundColor="#ededed" HeightRequest="40" Margin="10,5,10,0"/>
            <Entry Placeholder="Contraseña" x:Name="password" IsPassword="True" TextColor="Black"
           PlaceholderColor="#7f7f7f" BackgroundColor="#ededed" HeightRequest="40" Margin="10,5,10,0"/>
            <Button x:Name="btnLogin" Text="Iniciar sesión" Clicked="btnLogin_Clicked"
            BackgroundColor="#4CAF50" TextColor="White" CornerRadius="5" HeightRequest="40"
            Margin="10,10,10,0"/>
        </StackLayout>
    </Frame>
</ContentPage>